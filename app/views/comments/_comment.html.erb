<%= div_for(comment) do %>
  <p class="comment-body"><%= comment.body %></p>
  <p>
    <small>Commented <strong><%= time_ago_in_words(comment.created_at) %> ago</strong> by <%= comment.user.username %></small>
  </p>

  <p class="delete-comment">
    <% if comment.user == current_user %>
      <%= link_to 'Destroy', comment, method: :delete, data: { confirm: 'Are yousure?' } %>
    <% end %>
  </p>
<% end %>
