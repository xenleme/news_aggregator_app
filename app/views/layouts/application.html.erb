<!DOCTYPE html>
<html>
  <head>
    <title>NewsAggregatorApp</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="nav clearfix">
      <%= fa_icon "grav" %>
      <% if user_signed_in? %>
        <ul class="nav-list align-right">
          <li class="list-item">Hello, <%= link_to current_user.username, edit_user_registration_path %></li> |
          <li class="list-item"><%= link_to 'Submit link', new_link_path %></li> |
          <li class="list-item"><%= link_to 'Sign out', destroy_user_session_path, method: :delete %></li>
        </ul>
      <% else %>
        <ul class="nav-list align-right">
          <li class="list-item"><%= link_to 'Sign up', new_user_registration_path %></li>
          <li class="list-item"><%= link_to 'Sign in', new_user_session_path %></li>
        </ul>
      <% end %>
    </nav>
    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
